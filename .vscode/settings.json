 "clangd.arguments": [
  "--log=verbose",
  "--pretty",
  "--all-scopes-completion",
  "--completion-style=bundled",
  "--cross-file-rename",
  "--header-insertion=iwyu",
  "--header-insertion-decorators",
  "--background-index",
  "--clang-tidy",
  "--clang-tidy-checks=cppcoreguidelines-*,performance-*,bugprone-*,portability-*,modernize-*,google-*",
